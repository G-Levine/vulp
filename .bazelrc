# Bazel configurations

## Host platform

build --compilation_mode=fastbuild
build --compiler=compiler
build --copt="-Werror=return-type"
build --cpu=k8
build --cxxopt=-std=c++17
build --output_groups=+mypy

coverage --combined_report=lcov
coverage --compilation_mode=fastbuild
coverage --compiler=compiler
coverage --copt="-Werror=return-type"
coverage --cpu=k8
coverage --cxxopt=-std=c++17
coverage --instrument_test_targets

test --aspects @mypy_integration//:mypy.bzl%mypy_aspect
test --compilation_mode=fastbuild
test --compiler=compiler
test --copt="-Werror=return-type"
test --cpu=k8
test --cxxopt=-std=c++17
test --output_groups=+mypy
test --test_output=errors

# Run linter only (usage: bazel test --config lint //...)
test:lint --build_tests_only
test:lint --test_tag_filters=lint

## Target platform (Raspberry Pi)

build:pi --compilation_mode=opt
build:pi --compiler=clang
build:pi --cpu=armeabihf
build:pi --crosstool_top=@rpi_bazel//tools/cc_toolchain:toolchain

test:pi --compilation_mode=opt
test:pi --compiler=clang
test:pi --cpu=armeabihf
test:pi --crosstool_top=@rpi_bazel//tools/cc_toolchain:toolchain
test:pi --test_output=errors
